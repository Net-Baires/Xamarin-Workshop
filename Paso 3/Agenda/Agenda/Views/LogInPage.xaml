<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda.LogInPage">
    <Grid VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Entry x:Name="UserName" Placeholder="UserName" Text="{Binding UserName}" Grid.Row="0"/>
        <Entry x:Name="Password" Placeholder="Password" Text="{Binding Password}" IsPassword="True" Grid.Row="1"/>
        <Button x:Name="LogIn" Text="Log In" Command="{Binding LogInCommand}" Grid.Row="2"/>
    </Grid>
</ContentPage>